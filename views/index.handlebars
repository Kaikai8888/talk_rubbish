<div class="container">
  <div class="row justify-content-center my-5">
    <h1>你想對誰說幹話?</h1>
  </div>
  <div class="row justify-content-center">
    <form action="/" method="POST">
      <div class="row">
        {{#each targets}}
        <div class="form-check col mb-3 mx-1">
          <div class="card border-light" style="width:fit-content">
            <div class="d-flex justify-content-center">
              <label for="{{this}}" class="label-img {{this}}">
              </label>
            </div>
            <div class="card-body d-flex justify-content-center align-items-center">
              <input type="radio" name="target" value="{{this}}" class="form-check-input" id="{{this}}"
                {{#ifEq this ../target }} checked {{/ifEq}}>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
      {{#if noTarget}}
      <div class="alert alert-danger" role="alert">
        <strong>尚未選擇對象！</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      {{/if}}
      <div class="row my-4 ml-2 justify-content-between">
        <div class="col-md-2 mb-3">
          <button type="submit" class="btn btn-primary">產生幹話</button>
        </div>
        <div class="border border-secondary col-md-9  mr-4" style="width:100%; min-height:100px">
          {{#if rubbishTalk}} {{rubbishTalk}} {{/if}}
        </div>
      </div>
  </div>
</div>

</form>
</div>
</div>